<style>

  body{
    --gap: clamp(1rem, 6vw, 22.5rem);
    --full: minmax(var(--gap), 1fr);
    --content: min(65ch, 100% - var(--gap) * 2);

    display: grid;
    grid-template-columns: [full-start] var(--full) [content-start] var(--content) [content-end]
    var(--full)[full-end];

    > * {
    grid-column: content;
  }
  .full {
    grid-column: full;
  }
  }




