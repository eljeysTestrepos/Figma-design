---
import Services from "./Services.astro";
import ButtonPrimary from "./Button_primary.astro";
---
<section class="hero full">
  <!-- Markup her -->
   <div class="text-wrapper">
  <div class="hero-text">
    <h1>Empowering Your Business Growth</h1>
    <p>Discover tailored strategies and expert insights to take your business to the next level. Let us help you navigate challenges and achieve sustainable success.</p>
    <ButtonPrimary href="#"class="secondary-btn button-template">Book a Meeting</ButtonPrimary>
  </div>
   </div>
  <div class="hero-image">
    <img src="/images/photo.png" alt="">
  </div>

  <Services />
</section>
<style>
  /* Styles her */
  @layer components{
  .hero{
    display: grid;
    grid-template-columns: 1fr 1fr;
    /* border: solid orange; */
    color: var(--secondary-2) ;
  }
  .hero-text{
    border: solid orchid;
    display: flex;
    flex-direction: column;
    align-items: start;
    width: 45ch;
 
  }
  .text-wrapper{
    background-color: var(--primary-3);
  }
  .hero-image{
  }
  }
</style>
